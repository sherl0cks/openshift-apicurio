#!/bin/bash                                                                                                                                                              
                                                                                                                                                                         
mkdir /tmp/geoserver                                                                                                                                                     
cd /tmp/geoserver        
echo "=== downloading apicurio studio war distribution"                                                                                                                                                
curl -L -O https://github.com/Apicurio/apicurio-studio/releases/download/v0.2.4.Final/apicurio-studio-0.2.4.Final-quickstart.zip
unzip geoserver-2.12.1-war.zip                                                                                                                                           
echo "=== moving apicurio.war to ROOT.war in deployments directory and displaying the result"                                                                               
mv geoserver.war $JBOSS_HOME/standalone/deployments/ROOT.war                                                                                                             
ls -alh $JBOSS_HOME/standalone/deployments/                                                                                                                                   
echo -e  "=== cleaning up tmp"
rm -rf /tmp/geoserver